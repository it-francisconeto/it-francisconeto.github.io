$mainColor = #FFBE01

.baseCart-description
	width 50%
	padding-right 5%

.baseCart-header
	border-bottom 4px solid $mainColor
	font-size 18px
	font-weight bold

.baseCart-cell
	padding 22px

.baseCart-cell:not(.baseCart-header-cel)
	border-bottom 2px solid rgba(128, 128, 128, 0.4)

.baseCart-header:after
	content ""

.baseCart-removeBox
	font-size 12px
	margin-top 12px
	color #CC2E2E
	text-transform uppercase
	i
		position relative
		top -1px

.baseCart--shop-remove
	cursor pointer

.baseCart-cell--value
	text-align right